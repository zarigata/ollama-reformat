# Application Settings
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=change-this-in-production

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=60

# Paths
MODELS_DIR=./models
DATA_DIR=./data
